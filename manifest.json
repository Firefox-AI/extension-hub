{
  "manifest_version": 2,
  "name": "Extension Hub",
  "version": "1.0.0",
  "description": "An extension hub to prototype and test various ideas.",
  "optional_permissions": ["trialML"],
  "permissions": ["<all_urls>", "menus", "scripting", "storage","activeTab","history"],
  "icons": {
    "64": "assets/icon.svg"
  },
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  },
  "sidebar_action": {
    "default_title": "Extension Hub",
    "default_panel": "sidebar/sidebar.html",
    "default_icon": "assets/icon.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["vendor/Readability.js","dist/content.js"]
    }
  ],
  "options_ui": {
    "page": "settings/settings.html"
  }
}
